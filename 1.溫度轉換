將華氏溫度轉換成攝氏溫度
========================================================
"C"
\
#include<stdio.h> 
#include<stdlib.h> 
int main() { 
int Okc; 
printf("輸入華氏溫度"); 
scanf("%d",&Okc); 
printf("攝氏溫度為%d\n",(Okc-32)*5/9); 
system("pause"); 
return 0; 
} 


========================================================
"C++"

#include <iostream>
using namespace std;
int main ()
{
 int Okc ;
 cout <<"輸入華氏溫度：" ;
 cin >> Okc;
 cout<< (Okc-32)*5/9.0;
 system("pause"); 
   return 0;
}
========================================================
"JAVA"

package test01;
import java.util.Scanner;
public class t01 {
	public static void main(String[] args) {
  System.out.print("輸入華氏溫度：");
		Scanner input =new Scanner(System.in);
		int Okc=input.nextInt();		
		System.out.println(Math.round(((Okc-32)*5/9.0)*100.0)/100.0);
		input.close();
	}
}
